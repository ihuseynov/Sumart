<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="@color/recRow"
            card_view:contentPadding="3dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp"



        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginBottom="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031" >

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/abonentTipi"
                android:background="@drawable/home"
                android:layout_centerVertical="true"

                android:layout_width="150dp"
                android:layout_height="150dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/abonentTipi"
                android:layout_centerHorizontal="true"
               >
                <TextView
                    android:id="@+id/abkodString"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"

                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:text="Abonent Kodunuz : "
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/abonentKodu"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/abkodString"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="152465123549"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/borc"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:text="Qallıq : -25 manat"
                android:layout_below="@id/abonentKodu"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/synDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"

                android:paddingTop="8dp"
                android:textSize="18sp"
                android:text="18/12/2015"

                android:layout_below="@id/borc"
                 />

            <TextView
                android:id="@+id/location"
                android:padding="8dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Şuşa şəh. Mubariz Mənsimov küç. Ev 32."
                android:layout_below="@id/synDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            </RelativeLayout>






        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>